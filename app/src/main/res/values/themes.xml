    <!--    <style observableSubCatName="Base.Theme.ASM" parent="Theme.MaterialComponents.DayNight.NoActionBar">-->
    <style name="Base.Theme.ASM" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">
            ?android:colorBackground
        </item>
    </style>



    <style name="TransparentActivityTheme" parent="Theme.LearnApp">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

    </style>

