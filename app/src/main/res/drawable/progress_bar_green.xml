<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dp" />
            <gradient
                android:angle="270"
                android:centerColor="?attr/colorStructuralGrey"
                android:centerY="0.50"
                android:endColor="?attr/colorStructuralGrey"
                android:startColor="?attr/colorStructuralGrey" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="15dp" />
                <gradient
                    android:endColor="#218203"
                    android:startColor="#8F218203"
                    android:type="linear" />
            </shape>
        </clip>
    </item>
</layer-list>